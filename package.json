{
  "name": "nk",
  "version": "1.0.0",
  "description": "NodeJS",
  "author": "zxg",
  "main": "start.js",
  "scripts": {
    "dev": "npx nodemon --exec babel-node ./scripts/start.js",
    "build": "npx babel services --out-dir dist/services && npx babel scripts --out-dir dist/scripts && npx babel database --out-dir dist/database && npx babel config.js --out-dir dist  && npx babel package.json --copy-files --out-dir dist ",
    "start": "node ./dist/scripts/start.js",
    "jsdoc":"npx jsdoc -a all -c \"./doc/jsDoc/conf.js\""
  },
  "keywords": [
    "node",
    "node.js",
    "koa"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ],
      [
        "minify",
        {
          "builtIns": false
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-transform-runtime",
        {
          "corejs": 3
        }
      ],
      [
        "module-resolver",
        {
          "alias": {
            "@": "./"
          }
        }
      ],
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties"
      ]
    ],
    "ignore": [
      "node_modules"
    ],
    "minified": true,
    "comments": false
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*",
      "doc/*",
      "node_modules/*",
      "logs/*"
    ],
    "delay": "2500"
  },
  "dependencies": {
    "@log4js-node/smtp": "^1.1.0",
    "dotenv": "^8.2.0",
    "get-port": "^5.1.1",
    "glob": "^7.1.6",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-favicon": "^2.1.0",
    "koa-helmet": "^4.0.0",
    "koa-mount-routes": "^1.0.1",
    "koa-onerror": "^4.1.0",
    "koa-router": "^7.4.0",
    "koa-server-http-proxy": "^0.1.0",
    "koa-static-server": "^1.5.2",
    "koa2-cors": "^2.0.6",
    "log4js": "^6.3.0",
    "merge": "^1.2.1",
    "mysql": "^2.18.1",
    "nodemon": "^2.0.6",
    "sdp-transform": "^2.14.0",
    "shortid": "^2.2.15",
    "typeorm": "^0.2.28"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/runtime-corejs3": "^7.12.1",
    "jsdoc": "^3.6.6"
  }
}
